page {
    width: 100%;
    height: 100%;
    font-family: "PingFang SC Regular", "PingFang SC", "PingFang", "Droid Sans", "Droid Sans Fallback", Arial, "Helvetica Neue", Roboto, "Heiti SC", sans-self;
}

.wrapper {
    padding:10rpx 20rpx 0;
    width: 100%;
    height: 100%;
    background: rgba(248, 248, 248, 1);
    box-sizing: border-box;
}

.container-title {
    padding: 40rpx 0;
}

.title {
    margin: 0 auto 100rpx;
    width: 240rpx;
    line-height: 80rpx;
    color: #999;
    text-align: center;
    border-bottom: 1px solid #999;
}

.subTitle {
    color: rgba(153,153,153,1);
    padding: 0 20rpx;
}

.bg-red {
    background: #ec2000;
}

.bg-green {
    background: rgba(72,194,61,1);
}

.bg-gray {
    background: #aaa;
}

.flex-row {
    display: flex;
    flex-direction: row;
}

.flex-row view {
    flex: 1;
    height: 200rpx;
    line-height: 200rpx;
    text-align: center;
}

.flex-column {
    display: flex;
    flex-direction: column;
}

.flex-column view {
    flex: 1;
    height: 200rpx;
    line-height: 200rpx;
    text-align: center;
}

.pull-left {
    float: left;
}

.pull-right {
    float: right;
}